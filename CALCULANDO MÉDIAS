# ===========================================================
# ARQUIVO: hello_world_primeiro_programa.ipynb
# ===========================================================

# "Hello World" é o começo de tudo!
print("Hello World!")

# -----------------------------------------------------------
# Entrada de dados
# -----------------------------------------------------------
nome = input("Digite um nome: ")

# -----------------------------------------------------------
# Saída formatada (duas formas diferentes)
# -----------------------------------------------------------

# Usando o formatador de caracteres (%s)
print("Olá %s, bem-vindo(a) à disciplina de Programação. Parabéns pelo seu primeiro Hello World!" % (nome))

# Usando f-string (forma moderna e mais prática)
print(f"Olá {nome}, bem-vindo(a) à disciplina de Programação. Parabéns pelo seu primeiro Hello World!")

# -----------------------------------------------------------
# Cálculo da média de notas
# -----------------------------------------------------------

# A função int() transforma o valor digitado (texto) em número inteiro
Nota_1 = int(input("Digite a primeira nota: "))
Nota_2 = int(input("Digite a segunda nota: "))
Nota_3 = int(input("Digite a terceira nota: "))
Nota_4 = int(input("Digite a quarta nota: "))

# Calculando a média
media = (Nota_1 + Nota_2 + Nota_3 + Nota_4) / 4

# -----------------------------------------------------------
# Verificação da situação do aluno
# -----------------------------------------------------------

if media >= 6:
    situacao = "Aprovado(a)"
else:
    situacao = "Reprovado(a)"

# -----------------------------------------------------------
# Exibição dos resultados
# -----------------------------------------------------------
print(f"\nA média do aluno é: {media:.2f}")
print(f"Situação: {situacao}")


